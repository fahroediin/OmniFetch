{
  "manifest_version": 3,
  "name": "OmniFetch Selector Helper",
  "version": "1.0",
  "description": "Helps select CSS selectors by hovering over elements",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}